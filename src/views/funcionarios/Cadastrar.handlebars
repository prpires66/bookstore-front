<h1 class="text-center my-3">Cadastro de FuncionÃ¡rios</h1>
<form action="/funcionarios/Cadastrar" method="post">
  <div class="row w-50 d-block m-auto g-3">
    <div class="col-12">
      <label class="form-label" for="nome">Nome:</label>
      <input class="form-control" type="text" name="nome" id="nome" placeholder="Digite o seu Nome" required />
    </div>
    <div class="col-12">
      <label class="form-label" for="email">Email:</label>
      <input class="form-control" type="text" name="email" id="email" placeholder="Digite o seu Email" required />
    </div>
    <div class="col-12">
      <label class="form-label" for="senha">Senha:</label>
      <div class="input-group mb-3">
        <input class="form-control" type="password" name="senha" id="senha" placeholder="Digite a sua senha" required />
        <div class="input-group-append">
          <span class="input-group-text">
            <i id="show_password" class="bi bi-sm bi-eye-slash"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="d-grid gap-2 col-4 me-auto">
      <button class="btn btn-dark my-3" type="submit">Cadastrar</button>
    </div>
  </div>
</form>