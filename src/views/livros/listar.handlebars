<h1 class="text-center my-3">Lista de Livros</h1>

<div class="container text-center">
  <div class="row justify-content-center">
    {{#each livro}}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
        <center>
          <img class="img-thumbnail rounded" src="{{this.linkImagem}}" alt="{{this.titulo}}" style="max-width: 100%; height: auto;"><br>
          <strong>{{this.titulo}}</strong><br>
          {{this.autor}} <br>
          R${{this.preco}} <br>
          cod. Livro:{{this.idLivro}}<br>
          <a class="text-decoration-none" href="/livros/Alterar/{{this.idLivro}}">
            <i class="bi bi-pencil-square bi-md"></i>
          </a>
          <a class="text-decoration-none" href="/livros/Deletar/{{this.idLivro}}">
            <i class="bi bi-trash bi-md"></i>
          </a>
        </center>
      </div>
    {{/each}}
  </div>
</div>
